{
  "info": {
    "name": "Twitter Clone - Posts API",
    "description": "Unified Posts API for creating posts with text, media, and polls",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Post - Text Only",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "content",
              "value": "Hello, this is my first post! #hello #first",
              "type": "text"
            },
            {
              "key": "authorId",
              "value": "user123",
              "type": "text"
            },
            {
              "key": "hashtags[]",
              "value": "hello",
              "type": "text"
            },
            {
              "key": "hashtags[]",
              "value": "first",
              "type": "text"
            }
          ]
        },
        "url": {
          "raw": "{{base_url}}/posts",
          "host": ["{{base_url}}"],
          "path": ["posts"]
        },
        "description": "Create a simple text post with hashtags"
      }
    },
    {
      "name": "Create Post - With Media",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "content",
              "value": "Check out these amazing photos! #photography #art",
              "type": "text"
            },
            {
              "key": "authorId",
              "value": "user123",
              "type": "text"
            },
            {
              "key": "files",
              "type": "file",
              "src": []
            },
            {
              "key": "hashtags[]",
              "value": "photography",
              "type": "text"
            },
            {
              "key": "hashtags[]",
              "value": "art",
              "type": "text"
            }
          ]
        },
        "url": {
          "raw": "{{base_url}}/posts",
          "host": ["{{base_url}}"],
          "path": ["posts"]
        },
        "description": "Create a post with media files (images/videos)"
      }
    },
    {
      "name": "Create Post - With Poll",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "content",
              "value": "What's your favorite programming language? Vote now! #coding #poll",
              "type": "text"
            },
            {
              "key": "authorId",
              "value": "user123",
              "type": "text"
            },
            {
              "key": "poll[question]",
              "value": "What's your favorite programming language?",
              "type": "text"
            },
            {
              "key": "poll[options][]",
              "value": "JavaScript",
              "type": "text"
            },
            {
              "key": "poll[options][]",
              "value": "Python",
              "type": "text"
            },
            {
              "key": "poll[options][]",
              "value": "Java",
              "type": "text"
            },
            {
              "key": "poll[options][]",
              "value": "TypeScript",
              "type": "text"
            },
            {
              "key": "poll[expiresAt]",
              "value": "2024-12-31T23:59:59Z",
              "type": "text"
            },
            {
              "key": "poll[userId]",
              "value": "user123",
              "type": "text"
            },
            {
              "key": "hashtags[]",
              "value": "coding",
              "type": "text"
            },
            {
              "key": "hashtags[]",
              "value": "poll",
              "type": "text"
            }
          ]
        },
        "url": {
          "raw": "{{base_url}}/posts",
          "host": ["{{base_url}}"],
          "path": ["posts"]
        },
        "description": "Create a post with a poll (question and options)"
      }
    },
